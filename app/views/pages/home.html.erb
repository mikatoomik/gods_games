<h1>Page accueil</h1>


<h2>Listes de tout</h2>
<h3>Lieux</h3>
<ul>
  <% @places.each do |place| %>
   <li>
      <%= link_to place.name, place %>
   </li>
  <% end %>
</ul>
<h3>Dieux</h3>
<ul>
  <% @gods.each do |god| %>
   <li>
      <%= god.name %>
   </li>
  <% end %>
</ul>
<h3>Persos</h3>
<ul>
  <% @characters.each do |character| %>
   <li>
      <% if character.user == current_user %>
        <%= link_to character.name, character_path(character.id) %>
      <% else %>
        <%= character.name %>, (<%= character.user.email %>)
      <% end %>
   </li>
  <% end %>
</ul>
